generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categort {
  id      String       @id @default(uuid())
  name    String
  image   String
  Product Product[]
}

model Product {
  id         String    @id @default(uuid())
  name       String
  price      Int
  image      String
  categoryId String
  category   Categort @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model User {
  id String @id @default(uuid())
  name String
  phone String
  email String
  IsActive Boolean @default(false)
  password String
  role Role @default(USER)
}
model Sesion {
  id String @id @default(uuid())
  api String
  userId String
}

enum Role {
  ADMIN
  USER
  SUPPER_ADMIN
}